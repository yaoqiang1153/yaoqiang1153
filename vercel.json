{
  "version": 2,
  "functions": {
    "api/get_token.js": {
      "maxDuration": 10
    }
  },
  "routes": [
    {
      "src": "/get_token",
      "dest": "/get_token.js"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type"
        }
      ]
    }
  ]
} 